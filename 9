import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Digite o número de canetas compradas (N): ");
        int N = scanner.nextInt();
        
        System.out.print("Digite o valor da nota inicial (Z) em reais: ");
        double Z = scanner.nextDouble();
        System.out.print("Digite o valor do troco recebido (Y) em reais: ");
        double Y = scanner.nextDouble();
        double custoPorCaneta = (Z - Y) / N;
        System.out.printf("O custo de cada caneta é: R$ %.2f%n", custoPorCaneta);
        
       
        scanner.close();
    }
}